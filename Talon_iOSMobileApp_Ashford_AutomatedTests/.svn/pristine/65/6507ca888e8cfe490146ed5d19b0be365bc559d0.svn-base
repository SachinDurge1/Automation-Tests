	// Method to click on the "AshfordProfile" Tab in the three line menu bar Page..
	public static void  clickAshfordIDLink()
	{
		By locator_AshfordId = AshfordLocators.THREELINEBAR_ASHFORDPROFILE_LINK;
		boolean elementFound = CommonMethods.isElementFound(locator_AshfordId);

		if (elementFound)
		{
			WebElement ashfordProfile = Appium.driver.findElement(locator_AshfordId);
			ashfordProfile.click();

		}
	}
	
